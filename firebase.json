{
  "functions": [
    {
      "source": "functions",
      "codebase": "prd",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix functions run build",
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "hosting": {
    "public": "app/build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "predeploy": [
      "firebase use prd",
      "NODE_ENV=production npm run build --prefix app"
    ]
  },
  "emulators": {
    "singleProjectMode": true
  },
  "remoteconfig": {}
}
