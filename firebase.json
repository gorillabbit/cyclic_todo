{
	"functions": [
		{
			"source": "functions",
			"codebase": "prd",
			"ignore": [
				"node_modules",
				".git",
				"firebase-debug.log",
				"firebase-debug.*.log",
				"*.local"
			],
			"predeploy": [
				"npm --prefix \"$RESOURCE_DIR\" run lint",
				"npm --prefix \"$RESOURCE_DIR\" run build"
			]
		}
	],
	"hosting": {
		"public": "app/lib",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
		"site": "cyclictodo",
		"rewrites": [
			{
				"source": "/api/purchases",
				"function": "getPurchases"
			}
		]
	},
	"emulators": {
		"singleProjectMode": true
	},
	"remoteconfig": {}
}
